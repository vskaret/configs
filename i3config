# lock and suspend
bindsym $mod+shift+x exec i3lock --color "$bg-color" # locks (lox) screen
bindsym $mod+shift+c exec i3lock --color "$bg-color" & systemctl suspend # suspend and lock (combo)
bindsym $mod+shift+z exec systemctl suspend # only suspend (zuspend)

# scroll through workspaces
